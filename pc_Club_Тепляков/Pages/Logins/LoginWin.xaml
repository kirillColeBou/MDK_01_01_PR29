<Page x:Class="pc_Club_Тепляков.Pages.Logins.LoginWin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pc_Club_Тепляков.Pages.Logins"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginWin">

    <Grid>
        <Grid Margin="20" Background="#FFF0F0F0">
            <Label Content="Введите ваш логин: " VerticalAlignment="Top" HorizontalAlignment="Left" Margin="150,120,0,0"/>
            <TextBox x:Name="User" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="150,150,10,0" Height="25" Width="300"/>
            <Label Content="Введите ваш пароль: " VerticalAlignment="Top" HorizontalAlignment="Left" Margin="150,180,0,0"/>
            <PasswordBox PasswordChar="*"  x:Name="Password" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="150,210,10,0" Height="25" Width="300"/>
            <Button Click="Login" Height="25" Content="Войти" VerticalAlignment="Top" Margin="0,210,180,0" HorizontalAlignment="Right" Width="100" Background="#FF46FD00" BorderBrush="#FF46FD00" Foreground="White"/>
        </Grid>
    </Grid>
</Page>
